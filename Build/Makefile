# GNU Make solution makefile autogenerated by Premake

ifndef config
  config=debug_native
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_native)
  pugilua_config = debug_native
endif
ifeq ($(config),debug_x32)
  pugilua_config = debug_x32
endif
ifeq ($(config),debug_x64)
  pugilua_config = debug_x64
endif
ifeq ($(config),release_native)
  pugilua_config = release_native
endif
ifeq ($(config),release_x32)
  pugilua_config = release_x32
endif
ifeq ($(config),release_x64)
  pugilua_config = release_x64
endif

PROJECTS := pugilua

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

pugilua: 
ifneq (,$(pugilua_config))
	@echo "==== Building pugilua ($(pugilua_config)) ===="
	@${MAKE} --no-print-directory -C . -f pugilua.make config=$(pugilua_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f pugilua.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_native"
	@echo "  debug_x32"
	@echo "  debug_x64"
	@echo "  release_native"
	@echo "  release_x32"
	@echo "  release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   pugilua"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
